<p class="back-icon m-3">
  <%= link_to :back do %>
    <i class="fas fa-arrow-circle-left"></i>
  <% end %>
</p>
<div class="container container-form-create">
  <%= simple_form_for [ @list ] do |f| %>
    <%= f.input :name, label: 'Nom de la liste', class: 'input-form-create-list' %>
    <%= f.input :location, label: 'Localisation', class: 'input-form-create-list', placeholder: current_user.user_location %>
    <div class="container-btn-create">
      <%= f.submit "Confirmer", class: "button-green btn-create-list" %>
    </div>
  <% end %>
</div>
